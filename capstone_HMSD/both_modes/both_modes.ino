#define In1 7
#define In2 8
#define pwm 10
#define ledPin 13
#define control A0
#define feedback A2
#define pressure A3


float Cread, Fread, Ckal, Fkal,Pread,Pkal;
int flag;
int parameters;
int mode,pressureLevel,speedLevel;
int pressureGain,speedLimit;
boolean modeChanged=0;
SimpleKalmanFilter simpleKalmanFilter(0.1,0.1,0.01);
SimpleKalmanFilter simpleKalmanFilter1(0.1,0.1,0.01);
const long SERIAL_REFRESH_TIME = 100;
long refresh_time;
float volt=2;

struct _pid{
  float SetValue;
  float ActualValue;
  float err;
  float err_next;
  float err_last;
  float Kp,Ki,Kd;
  }pid;

void setup()
{
  PID_init();


  Serial.begin(9600);
  Serial.setTimeout(1);
  parameters=EEPROM.read(0);
  //parameters=133;
  parameterDecoder(parameters);
  if(pressureLevel==1) pressureGain=100;
  else if(pressureLevel==2) pressureGain=50;
  else if(pressureLevel==3) pressureGain=10;
  if(speedLevel==1) speedLimit=180;
  else if(speedLevel==2) speedLimit=215;
  else if(speedLevel==3) speedLimit=255;
  pinMode(ledPin, OUTPUT);
  pinMode(In1, OUTPUT);
  pinMode(In2, OUTPUT);
}

void loop() 
{
  if (Serial.available()){
    parameters = Serial.readString().toInt();
    //Serial.print(parameters);
    EEPROM.update(0,parameters);
    //Serial.println();
    parameterDecoder(parameters);
    if(pressureLevel==1) pressureGain=100;
    else if(pressureLevel==2) pressureGain=50;
    else if(pressureLevel==3) pressureGain=10;
    if(speedLevel==1) speedLimit=180;
    else if(speedLevel==2) speedLimit=215;
    else if(speedLevel==3) speedLimit=255;
    modeChanged=1;
  }
//  else{
//    Serial.println(parameters);
// }

  if (parameters == 133) {
    digitalWrite(ledPin, HIGH);
      }
  else if (parameters != 133){
    digitalWrite(ledPin, LOW);
  }
  delay(20);




  
  readsensor();
  filter();
  if(modeChanged) {
    PID_init();
    modeChanged=0;
  }
  if(mode==1){
    pid.ActualValue=Fread/3;

    volt=PID_realize(Cread-1.6);
//
//    Serial.print(Fread/3,4);
//    Serial.print(",");
//    Serial.print(Cread-1.6,4);
//    Serial.print(",");
//    Serial.print(volt,4);
//    Serial.print(",");
//    Serial.print((Fread/3+1.6-Cread)*100,4);
//    Serial.println();
    if(flag==1){
      digitalWrite(In1,HIGH);
      digitalWrite(In2,LOW);
      }
    else if(flag==2){
      digitalWrite(In1,LOW);
      digitalWrite(In2,HIGH);
      }
    analogWrite(pwm, volt);
  }
  else if(mode==2){
    pid.ActualValue=Pread;
    volt=PID_realize(pressureLevel);
    Serial.print((pressureLevel)*100.0,4);
    Serial.print(",");
    Serial.print(Pread*100,4);
    Serial.print(",");
    Serial.print(volt,4);
//    Serial.print(",");
//    Serial.print((Pread-pressureLevel+1)*100,4);
    Serial.println();

    if(Fread/3<0.5){
      digitalWrite(In1,LOW);
      digitalWrite(In2,LOW);
      }
    else{
    digitalWrite(In1,LOW);
    digitalWrite(In2,HIGH);

    analogWrite(pwm, volt);
    
    }
        
}
}
void readsensor()
{
  Fread= analogRead(feedback)*(5.0/1023.0);
  Cread= analogRead(control)*(5.0/1023.0);
  Pread=analogRead(pressure)*(5.0/1023.0);
}

void filter()
{
  Ckal=simpleKalmanFilter.updateEstimate(Cread);
  Fkal=simpleKalmanFilter1.updateEstimate(Fread);
}



void PID_init(){
    pid.SetValue=0;
    pid.ActualValue=0;
    pid.err=0.0;
    pid.err_last=0.0;
    pid.err_next=0.0;
    pid.Kp=0.2;
    pid.Ki=0.7;
    pid.Kd=0;
  }

float PID_realize(float p){
    pid.SetValue=p;
    if(mode==1){
      pid.err=pid.SetValue-pid.ActualValue;
      if(pid.err>0){
        flag=1;
        if (pid.err<0.3) volt=0;
        else volt=50+700*(pid.Kp*(pid.err-pid.err_next)+pid.Ki*pid.err+pid.Kd*(pid.err-2*pid.err_next+pid.err_last));
      }
      else{
        flag=2;
        if (pid.err>-0.3) volt=0;
        else volt=50-700*(pid.Kp*(pid.err-pid.err_next)+pid.Ki*pid.err+pid.Kd*(pid.err-2*pid.err_next+pid.err_last));
        }
      if(volt>speedLimit) volt=speedLimit;
      else if(volt<100) volt=0;
      
      pid.err_last=pid.err_next;
      pid.err_next=pid.err;
      return volt;
    }
    else if(mode==2){
      pid.err=pid.SetValue-pid.ActualValue;
      if(pid.err>0){
        volt+=pressureGain*(pid.Kp*(pid.err-pid.err_next)+pid.Ki*pid.err+pid.Kd*(pid.err-2*pid.err_next+pid.err_last));
      }
      else{
        volt+=pressureGain*(pid.Kp*(pid.err-pid.err_next)+pid.Ki*pid.err+pid.Kd*(pid.err-2*pid.err_next+pid.err_last));
        }
      if(volt>speedLimit) volt=speedLimit;
      else if(volt<0) volt=0;
      
      pid.err_last=pid.err_next;
      pid.err_next=pid.err;
      return volt;
    }
}

void parameterDecoder(int x){
  mode=x/100;//first digit
  pressureLevel=(x/10)%10;//second digit
  speedLevel=x%10;//third digit
  
  }
